#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>
#include <stdbool.h>


int main(int argc, string argv[])
{
   
    if (argc != 2) //checks to make sure proper input is given. If not, prompts user with the proper way to re-try
    {
        printf("Usage: ./caesar key\n");
        return 1;
    }
    else if (argc == 2)
    {
        const int key = atoi(argv[1]);//establishes the key. This takes the input from the command line argument and converts it into an integer.
        if (key < 0)//makes sure the integer is a positive number.
        bool isKeyValid = true;
        int len = strlen(argv[1]);
        for (int j = 0; j < len; j++)//loop to check if input is a digit. 
        {
            if (isdigit(argv[1][j]) == false)
            {
                bool isKeyValid = false;
                j = len;
            }
    }
    if (bool isKeyValid)
    {
        string P = get_string("Plaintext: ");//gets the text from the user that they want to encrypt.
        printf("ciphertext: ");
        for (int i = 0, length = strlen(P); i < length; i++)//Loop over the text input from user
        {
            if (islower(P[i]))
            {
                printf("%c", (P[i] - 'a' + key) % 26 + 'a');
            }
            else if (isupper(P[i]))
            {
                printf("%c", (P[i] - 'A' + key) % 26 + 'A');
            }
            else
            {
                printf("%c", P[i]);
            }    
        }
            printf("\n");
    } 
}

}
